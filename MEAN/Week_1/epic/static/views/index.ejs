<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>GREAT BUTTON GAME</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type ="text/javascript">
        $(document).ready(function (){
            var socket = io.connect();
            $('#add').click(function(data){
              socket.emit('add_button_pressed', $('#add').val());
            })
            $('#reset').click(function(data){
              socket.emit('reset_button_pressed', $('#reset').val());
            })
              socket.on('update_number', function (data){
              document.getElementById("msg").innerHTML = data.response
          })
        })
    </script>
  </head>
  <body>
    <div id='msg'>
      <p> The button has been pushed times</p>
    </div>
    <p>Push the button to update the count!</p>
    <form action="/butt" method="post">
      <button id ='add' type="button" name="button" value = 1>Push the epic button</button>
      <button id ='reset' type="button" name="button" value = 0>Reset count</button>
    </form>


  </body>
</html>
